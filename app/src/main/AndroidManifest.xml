<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tvz.android.satalica">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/satalica_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/satalica_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.UserActivity" />
        <activity android:name=".activities.GameActivity" />
        <activity android:name=".activities.ResultsActivity" />
        <activity android:name=".activities.TutorialActivity" />
        <activity android:name=".activities.PopupActivity" />
        <activity android:name=".activities.EndGameActivity"></activity>
    </application>

</manifest>