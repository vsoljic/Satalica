<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.GameActivity">

    <tvz.android.satalica.view.ClockView
        android:id="@+id/clock"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/clock1_png" />

    <Button
        android:id="@+id/answerOneBtn"
        android:layout_width="356dp"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent"
        android:text="@string/tutorial"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="checkSelectedAnswer" />

    <Button
        android:id="@+id/answerTwoBtn"
        android:background="@color/colorAccent"
        android:layout_width="356dp"
        android:layout_height="67dp"
        android:layout_marginBottom="5dp"
        android:text="@string/tutorial"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="checkSelectedAnswer" />

    <Button
        android:id="@+id/answerThreeBtn"
        android:background="@color/colorAccent"
        android:layout_width="356dp"
        android:layout_height="67dp"
        android:layout_marginBottom="5dp"
        android:text="@string/tutorial"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="checkSelectedAnswer" />

    <Button
        android:id="@+id/answerFourBtn"
        android:background="@color/colorAccent"
        android:layout_width="356dp"
        android:layout_height="67dp"
        android:text="@string/tutorial"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="checkSelectedAnswer" />


    <!--Koristiti linear layout jer je jednostavniji i pametniji, ima manje orderanja s kordinatama i bla bla-->

</LinearLayout>