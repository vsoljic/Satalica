<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical|center_horizontal"
    tools:context=".activities.GameActivity">

    <tvz.android.satalica.view.ClockView
        android:id="@+id/clock"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/clock1_png" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/answerOneBtn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:onClick="checkSelectedAnswer"
            android:text="12:00"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/answerTwoBtn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:onClick="checkSelectedAnswer"
            android:text="12:00"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/answerThreeBtn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:onClick="checkSelectedAnswer"
            android:text="12:00"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/answerFourBtn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/colorAccent"
            android:onClick="checkSelectedAnswer"
            android:text="12:00"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <!--Koristiti linear layout jer je jednostavniji i pametniji, ima manje orderanja s kordinatama i bla bla-->

</LinearLayout>